@model AssetWarrantyDetail
@using OnlineTechnicalSupport.Models.Data;
@{
    ViewBag.Title = "Garanti Süresi Ekle";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

@functions{
    public Asset Asset()
    {
        var a = ViewBag.Asset as Asset;
        return a;
    }
}

<h2>Garanti Süresi Ekle</h2>
<hr />
<div>
    @if (ViewBag.Result != null)
    {
        <div class="rounded-lg w-100">
            <div class="alert alert-success">
                @ViewBag.Result
            </div>
        </div>
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div>
            <table class="w-100 table-bordered table-striped text-left">
                <tr>
                    <td>
                        <small class="font-weight-bold">@Html.LabelFor(model => Asset().ProductId, htmlAttributes: new { @class = "control-label" })</small>
                    </td>
                    <td>
                        <small class="font-weight-bold">@Html.LabelFor(model =>  Asset().Product.Image, htmlAttributes: new { @class = "control-label" })</small>
                    </td>
                    <td>
                        <small class="font-weight-bold">@Html.LabelFor(model =>  Asset().Product.Name, htmlAttributes: new { @class = "control-label" })</small>
                    </td>
                    <td>
                        <small class="font-weight-bold">@Html.LabelFor(model => Asset().Product.ProductModel.Name, htmlAttributes: new { @class = "control-label" })</small>
                    </td>
                    <td>
                        <small class="font-weight-bold">@Html.LabelFor(model => Asset().Product.ProductModel.ProductCategory.Name, htmlAttributes: new { @class = "control-label" })</small>
                    </td>
                </tr>
                <tr>
                    <td>
                        <small>@Html.DisplayTextFor(model => Asset().ProductId)</small>
                    </td>
                    <td>
                        <img src="~/Files/Images/Products/@Asset().ProductId/@Asset().Product.Image" style="width:64px;" />
                    </td>
                    <td>
                        <small>@Html.DisplayTextFor(model => Asset().Product.Name)</small>
                    </td>
                    <td>
                        <small>@Html.DisplayTextFor(model => Asset().Product.ProductModel.Name)</small>
                    </td>
                    <td>
                        <small>@Html.DisplayTextFor(model => Asset().Product.ProductModel.ProductCategory.Name)</small>
                    </td>
                </tr>
            </table>
            <table class="mt-3 w-100 table-bordered table-striped text-left">
                <tr>
                    <td>
                        <small class="font-weight-bold">@Html.LabelFor(model => Asset().AssetId, htmlAttributes: new { @class = "control-label" })</small>
                    </td>

                    <td>
                        <small class="font-weight-bold">@Html.LabelFor(model => Asset().AssetTag, htmlAttributes: new { @class = "control-label" })</small>
                    </td>
                    <td>
                        <small class="font-weight-bold">@Html.LabelFor(model => Asset().ServiceTag, htmlAttributes: new { @class = "control-label" })</small>
                    </td>
                    <td>
                        <small class="font-weight-bold">@Html.LabelFor(model => Asset().PurchaseDate, htmlAttributes: new { @class = "control-label" })</small>
                    </td>
                    <td>
                        <small class="font-weight-bold">@Html.LabelFor(model => Asset().AssetWarrantyDetails.Last().WarrantyEndDate, htmlAttributes: new { @class = "control-label" })</small>
                    </td>
                </tr>
                <tr>
                    <td>
                        <small>@Html.DisplayTextFor(model => Asset().AssetId)</small>
                    </td>
                    <td>
                        <small>@Html.DisplayTextFor(model => Asset().AssetTag)</small>
                    </td>
                    <td>
                        <small>@Html.DisplayTextFor(model => Asset().ServiceTag)</small>
                    </td>
                    <td>
                        <small>@Html.DisplayTextFor(model => Asset().PurchaseDate)</small>
                    </td>
                    <td>
                        <small>@Html.DisplayTextFor(model => Asset().AssetWarrantyDetails.Last().WarrantyEndDate)</small>
                    </td>
                </tr>
            </table>
            <table class="mt-3 ml-3">
                <tr>
                    <td>
                        @Html.LabelFor(model => model.WarrantyYears, htmlAttributes: new { @class = "control-label" })<br />
                        @Html.DropDownListFor(model => model.WarrantyYears, new SelectList(ViewBag.Years, "Value", "Text"), "Süre belirleyiniz", new { @style = "min-width:300px;", @class = "form-control-sm w-100" })<br /><br />
                    </td>
                    <td>
                        @Html.ValidationMessageFor(model => model.WarrantyYears, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="Gönder" class="btn btn-sm btn-success w-100" />
                    </td>
                    <td></td>
                    <td></td>
                </tr>
            </table>
            <br />
        </div>
    }
</div>


