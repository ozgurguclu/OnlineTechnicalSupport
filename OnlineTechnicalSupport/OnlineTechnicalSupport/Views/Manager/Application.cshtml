@model CampaignApplication
@using OnlineTechnicalSupport.Models.Data;
@{
    ViewBag.Title = "Kampanya Başvurusunu Görüntüle";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h2>Kampanya Başvurusunu Görüntüle</h2>
<hr />
<div>
    @if (ViewBag.Result != null)
    {
        <div class="rounded-lg w-100">
            <div class="alert alert-success">
                @ViewBag.Result
            </div>
        </div>
    }
    @using (Html.BeginForm("Application","Manager", new { id = Model.CampaignApplicationId } ,FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div>
    <table class="w-100 table-bordered table-striped text-left">
        <tr>
            <td>
                <small class="font-weight-bold">@Html.LabelFor(model => model.CampaignApplicationId, htmlAttributes: new { @class = "control-label" })</small>
            </td>
            <td>
                <small class="font-weight-bold">@Html.LabelFor(model => model.Campaign.Name, htmlAttributes: new { @class = "control-label" })</small>
            </td>
            <td>
                <small class="font-weight-bold">Kullanıcı Hesabı Eposta</small>
            </td>
            <td>
                <small class="font-weight-bold">@Html.LabelFor(model => model.ApplicationDate, htmlAttributes: new { @class = "control-label" })</small>
            </td>
            <td>
                <small class="font-weight-bold">@Html.LabelFor(model => model.Result, htmlAttributes: new { @class = "control-label" })</small>
            </td>
        </tr>
        <tr>
            <td>
                <small>@Html.DisplayTextFor(model => model.CampaignApplicationId)</small>
            </td>
            <td>
                <small>@Html.DisplayTextFor(model => model.Campaign.Name)</small>
            </td>
            <td>
                <small>@Html.DisplayTextFor(model => model.Customer.Email)</small>
            </td>
            <td>
                <small>@Html.DisplayTextFor(model => model.ApplicationDate)</small>
            </td>
            <td>
                <small>@Html.DisplayTextFor(model => model.Result)</small>
            </td>
        </tr>
    </table>
    <table class="mt-3 w-100 table-bordered table-striped text-left">
        <tr>
            <td>
                <small class="font-weight-bold">@Html.LabelFor(model => model.DeviceSerialNo, htmlAttributes: new { @class = "control-label" })</small>
            </td>
            <td>
                @Html.DisplayTextFor(model => model.DeviceSerialNo)
            </td>
        </tr>
        <tr>
            <td>
                <small class="font-weight-bold">@Html.LabelFor(model => model.BillNo, htmlAttributes: new { @class = "control-label" })</small>
            </td>
            <td>
                @Html.DisplayTextFor(model => model.BillNo)
            </td>
        </tr>
        <tr>
            <td>
                <small class="font-weight-bold">@Html.LabelFor(model => model.PurchaseDate, htmlAttributes: new { @class = "control-label" })</small>
            </td>
            <td>
                @Html.DisplayTextFor(model => model.PurchaseDate)
            </td>
        </tr>
        <tr>
            <td>
                <small class="font-weight-bold">@Html.LabelFor(model => model.Store, htmlAttributes: new { @class = "control-label" })</small>
            </td>
            <td>
                @Html.DisplayTextFor(model => model.Store)
            </td>
        </tr>
        <tr>
            <td>
                <small class="font-weight-bold">@Html.LabelFor(model => model.UsageType, htmlAttributes: new { @class = "control-label" })</small>
            </td>
            <td>
                @Html.DisplayTextFor(model => model.UsageType)
            </td>
        </tr>
    </table>
    <hr />
    <table class="w-100 table-bordered table-striped text-left">
        <tr>
            <td>
                <small class="font-weight-bold">@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })</small>
            </td>
            <td>
                @Html.DisplayTextFor(model => model.Name)
            </td>
        </tr>
        <tr>
            <td>
                <small class="font-weight-bold">@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })</small>
            </td>
            <td>
                @Html.DisplayTextFor(model => model.Email)
            </td>
        </tr>
        <tr>
            <td>
                <small class="font-weight-bold">@Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label" })</small>
            </td>
            <td>
                @Html.DisplayTextFor(model => model.PhoneNumber)
            </td>
        </tr>
        <tr>
            <td>
                <small class="font-weight-bold">@Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label" })</small>
            </td>
            <td>
                @Html.DisplayTextFor(model => model.Address)
            </td>
        </tr>
    </table>
    <hr />
    <table class="w-100 table-bordered table-striped text-left">
        <tr>
            <td>
                <small class="font-weight-bold">@Html.LabelFor(model => model.AttachmentDeviceSerialNoImage, htmlAttributes: new { @class = "control-label" })</small>
            </td>
            <td>
                <small class="font-weight-bold">@Html.LabelFor(model => model.AttachmentBillImage, htmlAttributes: new { @class = "control-label" })</small>
            </td>
        </tr>
        <tr>
            <td>
                <img src="~/Files/Images/Campaigns/@Model.CampaignId/Applications/@Model.CampaignApplicationId/@Model.AttachmentDeviceSerialNoImage" style="height:256px;"/>
            </td>
            <td>
                <img src="~/Files/Images/Campaigns/@Model.CampaignId/Applications/@Model.CampaignApplicationId/@Model.AttachmentBillImage" style="height:256px;" />
            </td>
        </tr>
    </table>
    <div class="mt-3">
        <button type="submit" name="btn" value="Approve" class="btn btn-sm btn-success">Onayla</button>
        <button type="submit" name="btn" value="Deny" class="btn btn-sm btn-danger">Reddet</button>
    </div>
    <br />
</div>
    }
</div>

