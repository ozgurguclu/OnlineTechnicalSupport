@model OnlineTechnicalSupport.Models.ViewModels.UserLoginViewModel
@{
    ViewBag.Title = "Giriş yap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="bg-light">
        <div class="row container m-auto">
            <div class="col-sm-6">
                <div class="p-5 mt-5">
                    <h4 class="font-weight-normal">Kullanıcı Girişi</h4>
                    <p class="lead">Hesabınıza erişmek için giriş yapınız.</p>
                    <br />
                    <p class="lead">
                        Örnek müşteri hesabı: test@user.com | user1234  Parola: 12345678
                        <br /><br />
                        Örnek yönetici hesabı: test@admin.com | admin123  Parola: 12345678
                    </p>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="p-3 m-5 bg-white rounded-lg mx-auto" style="width:340px; box-shadow:0 2px 4px rgba(0, 0, 0, .1), 0 8px 16px rgba(0, 0, 0, .1);">
                    <div class="row">
                        <div class="col">
                            <table class="w-100">
                                <tr>
                                    <td>
                                        @Html.EditorFor(m => m.LoginNameOrEmail, new { htmlAttributes = new { @style = "width:100%;", @class = "form-control-lg w-100 mb-2", @placeholder = "Eposta veya kullanıcı adı" } })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.EditorFor(m => m.LoginPassword, new { htmlAttributes = new { @style = "width:100%;", @class = "form-control-lg w-100 mb-3", @placeholder = "Parola" } })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="float-left">
                                            Müşteri
                                            @Html.RadioButtonFor(model => model.UserType, 1)
                                        </div>
                                        <div class="float-left ml-5 mb-3">
                                            Kurum çalışanı
                                            @Html.RadioButtonFor(model => model.UserType, 2)
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="submit" value="Giriş yap" class="btn btn-lg btn-success w-100 mb-2" style="width:100% !important;" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.ActionLink("Yeni hesap oluştur", "Create", "Security", new { area = "" }, new { @class = "font-weight-light" })
                                        @Html.ActionLink("Şifrenizi mi unuttunuz?", "ForgotPassword", "Security", new { area = "" }, new { @class = "font-weight-light float-right" })
                                    </td>
                                </tr>
                            </table>
                            @if (ViewBag.LoginError != null)
                             {   
                                <div>
                                    <br />
                                    <div class="alert alert-warning w-100"> @ViewBag.LoginError</div>
                                </div>
                             }   
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}