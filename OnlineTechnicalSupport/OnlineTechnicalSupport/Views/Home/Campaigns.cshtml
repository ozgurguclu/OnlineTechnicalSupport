@model IEnumerable<OnlineTechnicalSupport.Models.Data.Campaign>
@{
    ViewBag.Title = "Kampanyalar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div style="background-color:white;">
        <div class="mt-5 pl-5 pr-5 pt-5 container m-auto">
            <div>
                <h5 class="font-weight-normal">Kampanyalar</h5>
            </div>
            <div class="mt-3 pt-3 container">
                <div class="row">
                    @foreach (var campaign in Model)
                    {
                        <div class="col-sm-4 ml-3 p-3 bg-light">
                            <a href="~/Home/Campaign?id=@campaign.CampaignId">
                                <img src="~/Files/Images/Campaigns/@campaign.CampaignId/@campaign.Image" style="height:128px;" />
                                <br />
                                <h6 class="font-weight-normal">@campaign.Title</h6>
                            </a>

                            <small class="font-weight-bold">
                                Kampanya başlangıç tarihi:
                            </small>
                            <small class="font-weight-normal">
                                @campaign.StartDate.ToString()
                            </small>
                            <br />
                            <small class="font-weight-bold">
                                Kampanya bitiş tarihi:
                            </small>
                            <small class="font-weight-normal">
                                @campaign.EndDate.ToString()
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

