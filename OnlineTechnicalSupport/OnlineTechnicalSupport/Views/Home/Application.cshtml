@model OnlineTechnicalSupport.Models.Data.CampaignApplication
@using OnlineTechnicalSupport.Models.Data
@{
    ViewBag.Title = "Kampanya Başvuru";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@functions{
    public string CampaignName()
    {
        var c = Session["Campaign"] as Campaign;
        return c.Title;
    }
}

<script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
<link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />

<div style="background-color:white;">
    <div class="pl-5 pr-5 pt-5 container m-auto">
        @if (ViewBag.Result != null)
        {
            <div class="rounded-lg w-100">
                <div class="alert alert-success">
                    @ViewBag.Result
                </div>
            </div>
        }
        @using (Html.BeginForm("Application", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="rounded-lg mx-auto">
                <div class="p-2 bg-white rounded-lg">
                    <div class="row mx-auto">
                        <div class="w-100 my-auto justify-content-center lead">
                            <small>@CampaignName()</small>
                        </div>
                    </div>
                </div>
                <hr />
                <table class="ml-3">
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.DeviceSerialNo, htmlAttributes: new { @class = "control-label" })<br />
                            @Html.EditorFor(model => model.DeviceSerialNo, new { htmlAttributes = new { @style = "", @class = "form-control-sm w-100" } })<br />
                        </td>
                        <td>
                            @Html.ValidationMessageFor(model => model.DeviceSerialNo, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.BillNo, htmlAttributes: new { @class = "control-label" })<br />
                            @Html.EditorFor(model => model.BillNo, new { htmlAttributes = new { @style = "", @class = "form-control-sm w-100" } })<br />
                        </td>
                        <td>
                            @Html.ValidationMessageFor(model => model.BillNo, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.PurchaseDate, htmlAttributes: new { @class = "control-label" })<br />
                            @Html.EditorFor(model => model.PurchaseDate, new { htmlAttributes = new { @id = "datepicker", @style = "min-width:300px;", @class = "form-control-sm" } })<br />
                        </td>
                        <td>
                            @Html.ValidationMessageFor(model => model.PurchaseDate, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.Store, htmlAttributes: new { @class = "control-label" })<br />
                            @Html.EditorFor(model => model.Store, new { htmlAttributes = new { @style = "", @class = "form-control-sm w-100" } })<br />
                        </td>
                        <td>
                            @Html.ValidationMessageFor(model => model.Store, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.UsageType, htmlAttributes: new { @class = "control-label" })<br />
                            @Html.EditorFor(model => model.UsageType, new { htmlAttributes = new { @style = "", @class = "form-control-sm w-100" } })<br />
                        </td>
                        <td>
                            @Html.ValidationMessageFor(model => model.UsageType, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <br />
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })<br />
                            @Html.LabelFor(model => model.SelectUserName)
                            @Html.CheckBoxFor(model => model.SelectUserName)
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @style = "", @class = "form-control-sm w-100" } })<br />
                        </td>
                        <td>
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <br />
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })<br />
                            @Html.LabelFor(model => model.SelectUserEmail)
                            @Html.CheckBoxFor(model => model.SelectUserEmail)
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @style = "", @class = "form-control-sm w-100" } })<br />
                        </td>
                        <td>
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <br />
                            @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label" })<br />
                            @Html.LabelFor(model => model.SelectUserPhoneNumber)
                            @Html.CheckBoxFor(model => model.SelectUserPhoneNumber)
                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @style = "", @class = "form-control-sm w-100" } })<br />
                        </td>
                        <td>
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <br />
                            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label" })<br />
                            @Html.LabelFor(model => model.SelectUserAddress)
                            @Html.CheckBoxFor(model => model.SelectUserAddress)
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @style = "", @class = "form-control-sm w-100" } })<br />
                        </td>
                        <td>
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <br />
                            @Html.LabelFor(model => model.AttachmentDeviceSerialNoImage, htmlAttributes: new { @class = "control-label" })<br />
                            <input type="file" name="file1" class="btn btn-primary w-100" />
                        </td>
                        <td>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.AttachmentBillImage, htmlAttributes: new { @class = "control-label" })<br />
                            <input type="file" name="file2" class="btn btn-primary w-100" />
                        </td>
                        <td>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <br />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="submit" value="Gönder" class="btn btn-success w-100" />
                        </td>
                        <td></td>
                        <td></td>
                    </tr>
                </table>
                <br />
            </div>
        }
    </div>
</div>

<script>
    $('#datepicker').datepicker({
        uiLibrary: 'bootstrap4',
        format: 'dd/mm/yyyy'
    });
</script>

